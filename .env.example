# Database Configuration
DATABASE_URL=postgresql://authuser:authpass@localhost:5432/authdb
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=authdb
DATABASE_USER=authuser
DATABASE_PASSWORD=authpass
DATABASE_SSL=false
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# Redis Configuration
REDIS_URL=redis://:redispass@localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redispass
REDIS_DB=0

# JWT Configuration
JWT_ACCESS_SECRET=your-access-token-secret-change-in-production
JWT_REFRESH_SECRET=your-refresh-token-secret-change-in-production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=30d

# Server Configuration
NODE_ENV=development
PORT=3000
AUTH_SERVICE_PORT=3001
USER_SERVICE_PORT=3002
API_VERSION=v1
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002
FRONTEND_URL=http://localhost:3000
STORAGE_URL=http://localhost:3002

# Email Configuration
EMAIL_PROVIDER=mailhog
EMAIL_HOST=localhost
EMAIL_PORT=1025
EMAIL_USER=
EMAIL_PASSWORD=
EMAIL_FROM=noreply@authsystem.com

# OAuth Configuration
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:3001/api/v1/auth/oauth/google/callback

FACEBOOK_CLIENT_ID=
FACEBOOK_CLIENT_SECRET=
FACEBOOK_REDIRECT_URI=http://localhost:3001/api/v1/auth/oauth/facebook/callback

GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_REDIRECT_URI=http://localhost:3001/api/v1/auth/oauth/github/callback

# CAPTCHA Configuration
CAPTCHA_PROVIDER=recaptcha
RECAPTCHA_SECRET_KEY=

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Object Storage (S3/MinIO)
S3_ENDPOINT=
S3_REGION=us-east-1
S3_BUCKET=auth-avatars
S3_ACCESS_KEY=
S3_SECRET_KEY=

# Payment Processor (Stripe)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_PUBLISHABLE_KEY=

# Security
ENCRYPTION_KEY=your-32-character-encryption-key-change-this
CSRF_SECRET=your-csrf-secret-change-in-production

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json

# Feature Flags
FEATURE_MFA_ENABLED=true
FEATURE_OAUTH_ENABLED=true
FEATURE_SUBSCRIPTIONS_ENABLED=true
